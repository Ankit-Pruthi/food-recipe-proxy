{
  "manifest_version": 3,
  "name": "Plateful AI",
  "version": "1.0",
  "description": "Full of recipes at your click",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module" 
  },
  "action": {
    "default_icon": "icons/icons8-plate-1.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
